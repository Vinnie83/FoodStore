@using FoodStore.ViewModels.Admin
@model DeliverOrderViewModel

@{
    ViewData["Title"] = "Confirm Delivery";
}

<h2>Confirm Delivery</h2>

<div class="card p-3 mt-3">
    <p><strong>Order ID:</strong> @Model.OrderId</p>
    <p><strong>User Email:</strong> @Model.UserEmail</p>
    <p><strong>Order Date:</strong> @Model.OrderDate</p>
    <p><strong>Payment Status:</strong> @Model.PaymentStatus</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount</p>

    <form method="post" asp-area="Admin" asp-controller="OrderManagement" asp-action="DeliverConfirmed">
        <input type="hidden" name="id" value="@Model.OrderId" />
        <button type="submit" class="btn btn-success">Mark as Delivered</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
