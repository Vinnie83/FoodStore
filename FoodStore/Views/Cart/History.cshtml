@using FoodStore.ViewModels
@model List<OrderHistoryViewModel>

@{
    ViewData["Title"] = "Order History";
}

<h2>Order History</h2>

@if (!Model.Any())
{
    <p>You have no past orders.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Payment</th>
                <th>Total (lv.)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.OrderStatus</td>
                    <td>@order.PaymentStatus</td>
                    <td>@($"{order.TotalAmount:F2} lv.")</td>
                    <td>
                        @if (order.OrderStatus == nameof(FoodStore.Data.Models.Enums.OrderStatus.Pending))
                        {
                            <a asp-action="Cancel" asp-controller="Cart" asp-route-orderId="@order.OrderId"
                               class="btn btn-warning btn-sm">Cancel</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

