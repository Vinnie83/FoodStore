@using FoodStore.ViewModels
@model List<OrderHistoryViewModel>

<h2>Order History</h2>

@if (!Model.Any())
{
    <p>You have no past orders.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Payment</th>
                <th>Total (lv.)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>@order.OrderStatus</td>
                    <td>@order.PaymentStatus</td>
                    <td>@($"{order.TotalAmount:F2} lv.")</td>
                </tr>
            }
        </tbody>
    </table>
}