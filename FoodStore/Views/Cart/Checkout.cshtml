@using FoodStore.ViewModels
@model List<CartItemViewModel>

@{
    ViewData["Title"] = "Review Your Order";
}

<h2>Checkout</h2>

@if (!Model.Any())
{
    <p>Your cart is empty. <a asp-controller="Product" asp-action="All">Shop now</a></p>
}
else
{
    <form asp-action="CheckoutConfirm" method="post">
        @Html.AntiForgeryToken()
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@($"{item.Price:F2} lv.")</td>
                        <td>@($"{item.Total:F2} lv.")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-right">
            <h4>Total: @Model.Sum(i => i.Total).ToString("F2") lv.</h4>
            <button type="submit" class="btn btn-success">Confirm Order</button>
        </div>
    </form>
}