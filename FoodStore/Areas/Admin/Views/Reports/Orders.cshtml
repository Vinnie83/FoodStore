@using FoodStore.ViewModels
@using FoodStore.ViewModels.Admin
@model OrdersReportPageViewModel
@{
    ViewData["Title"] = "Orders Report";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2 class="mb-4">Orders Report</h2>

<a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Reports" asp-action="ExportToExcel" 
    asp-route-filter="@Context.Request.Query["filter"]">
    Export to Excel
</a>

<form method="get" class="mb-4">
    <label for="filter">Filter by:</label>
    <select name="filter" id="filter" class="form-select" onchange="this.form.submit()">
        <option value="">-- Select Filter or Sort --</option>

        <optgroup label="Sort Options">
            <option value="order_id">Order ID</option>
            <option value="date_asc">Date Ascending</option>
            <option value="date_desc">Date Descending</option>
        </optgroup>

        <optgroup label="Filter by User">
            @foreach (var email in Model.UserEmails)
            {
                <option value="user:@email">@email</option>
            }
        </optgroup>

        <optgroup label="Filter by Supplier">
            @foreach (var supplier in Model.Suppliers)
            {
                <option value="supplier:@supplier">@supplier</option>
            }
        </optgroup>

        <optgroup label="Filter by Brand">
            @foreach (var brand in Model.Brands)
            {
                <option value="brand:@brand">@brand</option>
            }
        </optgroup>

        <optgroup label="Filter by Category">
            @foreach (var category in Model.Categories)
            {
                <option value="category:@category">@category</option>
            }
        </optgroup>
    </select>
</form>


@if (!Model.Reports.Any())
{
    <div class="alert alert-warning">No orders recorded.</div>
}
else
{
    <div class="table responsive">
        <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Total Price</th>
                <th>User Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Reports)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@($"{order.TotalPrice:F2} lv.")</td>
                    <td>@order.UserEmail</td>
                        <td>
                            <a href="@Url.Action("OrderDetails", "Reports", new { area = "Admin", id = order.OrderId })" class="btn btn-sm btn-info">
                                View Details
                            </a>
                        </td>
                </tr>
            }
        </tbody>
        </table>    
    </div>

    @if (Model.Reports.TotalPages > 1)
    {
        <ul class="pagination">
            @if (Model.Reports.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route-page="@(Model.Reports.PageIndex - 1)"
                       asp-route-filter="@Context.Request.Query["filter"]">
                        Previous
                    </a>
                </li>
            }

            @for (int i = 1; i <= Model.Reports.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Reports.PageIndex ? "active" : "")">
                    <a class="page-link"
                       asp-route-page="@i"
                       asp-route-filter="@Context.Request.Query["filter"]">
                        @i
                    </a>
                </li>
            }

            @if (Model.Reports.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route-page="@(Model.Reports.PageIndex + 1)"
                       asp-route-filter="@Context.Request.Query["filter"]">
                        Next
                    </a>
                </li>
            }
        </ul>
    }
}
