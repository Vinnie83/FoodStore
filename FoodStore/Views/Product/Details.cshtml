@using FoodStore.ViewModels
@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <h2>@Model.Name</h2>
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name" />
        </div>
        <div class="col-md-7">
            <p><strong>Brand:</strong> @Model.Brand</p>
            <p><strong>Price:</strong> @Model.Price lv.</p>
            <p><strong>Available:</strong> @Model.StockQuantity pcs</p>
            <p><strong>Unit:</strong> @Model.UnitQuantity</p>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="Add" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-success mt-3">Add to Cart</button>
                </form>
                <form asp-controller="Favorites" asp-action="Add" method="post">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-primary">Add to Favorites</button>
                </form>
            }
            else
            {
                <p class="text-muted mt-3">
                    Please <a href="~/Identity/Account/Login">log in</a> to add items to your cart.
                </p>
            }
            <a asp-action="Category" asp-controller="Product" asp-route-category="@Model.Category" class="btn btn-secondary mt-3">Back to Products</a>

            @if (User.IsInRole("Admin"))
            {
                <div class="mt-3">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>

                    <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                </div>
                
            }
        </div>
    </div>
</div>