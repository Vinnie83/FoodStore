@using FoodStore.ViewModels
@model IEnumerable<ProductSearchResultViewModel>

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>

@if (!Model.Any())
{
    <p>No products found matching your search.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text mb-1">
                            <strong>Category:</strong> @product.Category <br />
                            <strong>Brand:</strong> @product.Brand
                        </p>
                        <p class="card-text mt-auto fw-bold">@product.Price.ToString("0.00") lv.</p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary btn-sm mt-2">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
