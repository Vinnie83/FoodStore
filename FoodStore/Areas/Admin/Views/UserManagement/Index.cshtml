@using FoodStore.ViewModels.Admin
@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Manage Users</h2>

    <h5>
        <a asp-area="Identity" asp-controller="Account" asp-action="Register" class="text-decoration-underline text-primary">
            Add a User
        </a>
    </h5>

    <table class="table table-hover table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th scope="col">UserName</th>
                <th scope="col">Roles</th>
                <th scope="col" class="text-center">Delete User</th>
                <th scope="col" class="text-center">Admin Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="align-middle">
                    <td>@user.UserName</td>
                    <td>
                        @if (user.Roles.Any())
                        {
                            @string.Join(", ", user.Roles)
                        }
                    </td>
                    <td class="text-center">
                        <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                            <button type="submit" class="btn btn-outline-danger btn-sm">Delete User</button>
                        </form>
                    </td>
                    <td class="text-center">
                        @if (user.Roles.Contains("Admin"))
                        {
                            <form asp-action="RemoveFromAdmin" method="post" asp-route-id="@user.Id" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm">Remove from Admin</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="AddToAdmin" method="post" asp-route-id="@user.Id" class="d-inline">
                                <button type="submit" class="btn btn-outline-primary btn-sm">Add to Admin</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
