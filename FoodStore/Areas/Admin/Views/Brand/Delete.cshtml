@using FoodStore.ViewModels.Admin
@model BrandDeleteViewModel

@{
    ViewData["Title"] = "Delete Brand";
}

<h2>Delete Brand</h2>

<div class="card border-warning mb-3">
    <div class="card-body bg-warning bg-opacity-25">
        <h4 class="card-title text-warning">Are you sure you want to delete this brand?</h4>
        <p class="card-text">
            <strong>@Model.Name</strong> (@Model.CountryOfOrigin)
        </p>
    </div>
</div>

<form asp-area="Admin" asp-controller="Brand" asp-action="ConfirmDelete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    <input type="hidden" asp-for="CountryOfOrigin" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-area="Admin" asp-controller="Brand" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>