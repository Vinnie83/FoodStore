@using FoodStore.ViewModels.Admin
@model EditBrandInputModel

@{
    ViewData["Title"] = "Edit Brand";
}

<h2 class="mb-4">Edit Brand</h2>

<form asp-area="Admin" asp-controller="Brand" asp-action="EditBrand" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Brand Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter brand name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CountryOfOrigin" class="form-label">Country of Origin</label>
        <input asp-for="CountryOfOrigin" class="form-control" placeholder="Enter country" />
        <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-area="Admin" asp-controller="Brand" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}